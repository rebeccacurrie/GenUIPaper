{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "paths": {
      "@json-render/core": ["./json-render/packages/core/dist/index.d.mts"],
      "@json-render/react/schema": ["./json-render/packages/react/dist/schema.d.mts"],
      "@json-render/react": ["./json-render/packages/react/dist/index.d.mts"]
    }
  },
  "include": ["src", "server", "vite.config.ts"]
}
